<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="General">

        <ListPreference
            app:defaultValue="reply"
            app:entries="@array/reply_entries"
            app:entryValues="@array/reply_values"
            app:key="reply"
            app:title="Language"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>


    <PreferenceCategory app:title="Notifications">

        <SwitchPreferenceCompat
            app:key="pushMeal"
            app:title="Meal notifications"
            app:summaryOff="Actually you'll no receive notifications for meal"
            app:summaryOn="Actually you'll receive notifications for meal"/>

        <SwitchPreferenceCompat
            app:key="pushMessage"
            app:summaryOff="@string/attachment_summary_off"
            app:summaryOn="@string/attachment_summary_on"
            app:title="Messages notifications" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Account">

        <EditTextPreference
            app:key="userName"
            app:title="User Name"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="account"
            app:title="Delete My account" />

    </PreferenceCategory>

</androidx.preference.PreferenceScreen>
