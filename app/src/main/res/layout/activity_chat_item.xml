<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_mentor_chat_item_root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_margin">

    <!-- MESSAGE CONTAINER -->
    <TextView
        android:id="@+id/activity_mentor_chat_item_message_container_text_view_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/default_text_size_mini"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/activity_mentor_chat_item_message_container_text_message_container"
        app:layout_constraintStart_toStartOf="@+id/activity_mentor_chat_item_message_container_text_message_container"
        app:layout_constraintTop_toBottomOf="@+id/activity_mentor_chat_item_message_container_text_message_container" />

    <ImageView
        android:id="@+id/activity_mentor_chat_item_profile_container_profile_image"
        android:layout_width="50dip"
        android:layout_height="50dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_anon_user_48dp" />

    <LinearLayout
        android:id="@+id/activity_mentor_chat_item_message_container_text_message_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_chat_message_background"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/activity_mentor_chat_item_profile_container_profile_image"
        app:layout_constraintStart_toEndOf="@+id/activity_mentor_chat_item_profile_container_profile_image"
        app:layout_constraintTop_toTopOf="@+id/activity_mentor_chat_item_profile_container_profile_image">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/default_margin">

            <!-- TEXT MESSAGE -->
            <TextView
                android:id="@+id/activity_mentor_chat_item_message_container_text_message_container_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:textSize="@dimen/default_text_size"
                tools:text="Text example" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>