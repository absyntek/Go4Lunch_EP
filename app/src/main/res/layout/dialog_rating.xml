<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:text="How much do you love this place ?" />

    <RatingBar
        android:id="@+id/ratingBoxNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:numStars="5"
        android:stepSize="1"
        android:secondaryProgressTint="@color/colorPrimarySoft"
        android:progressTint="@color/yellow"
        android:progressBackgroundTint="@color/colorPrimarySoft"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/ratingBoxCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:textColor="@color/quantum_white_100"
            android:background="@drawable/circular_button"
            android:text="@string/fui_cancel"/>
        <Button
            android:id="@+id/ratingBoxValid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:textColor="@color/quantum_white_100"
            android:background="@drawable/circular_button"
            android:text="OK"/>
    </LinearLayout>

</LinearLayout>